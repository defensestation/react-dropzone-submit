{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist/types",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}